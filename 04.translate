#!/bin/bash

SLANG="$1"
BATCH="$2"

echo "Translating $SLANG $BATCH"
gzip -dc ${BATCH}/sentences.gz | b64filter cache sh translate.sh ${SLANG} | gzip -9c > ${BATCH}/sentences_en.gz

before=`gzip -dc ${BATCH}/sentences.gz | wc -l`
after=`gzip -dc ${BATCH}/sentences_en.gz | wc -l`
echo "Check $before -> $after $BATCH"
